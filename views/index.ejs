<%- include("partials/header.ejs") %>
<section id="posts">
    <% posts.forEach(post => { %>
        <article id="post">
        <% if (post.imagePath) { %>
            <img src="<%= post.imagePath %>" alt="Post Image" style="max-width: 100%;">
        <% } %>
        <h2 class="post-title"><%= post.title %></h2>
        <p class="post-content"><%= post.content.substring(0, 400) %>...</p>
        <p class="date"><%= moment(post.date).format('MMMM D, YYYY h:mm A') %></p>
        <div id="crud">
        <a href="/read/<%= post._id %>" class="read-more">Read more</a>
        <a href="/edit/<%= post._id %>" class="edit-post">Edit</a>
        <form action="/delete/<%= post._id %>" method="post">
            <button type="submit" class="delete-post">Delete</button>
        </form>
        </div>
        </article>
    <% }); %>
</section>  
<%- include("partials/footer.ejs") %>
